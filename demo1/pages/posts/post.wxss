swiper {
    width:100%;
    height:400rpx
}
image {
    width:100%;
    height:400rpx
}
.post-containter {
    display: flex;
    flex-direction: column;
    background-color: #fff;
    border-bottom: 1px solid #ededed;
    padding-bottom: 5px;
}
.post-author-date {
    margin: 10rpx 0 20rpx 10rpx;
}
.post-author {
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
}
.post-date {
    margin-left: 20rpx;
    vertical-align: middle;
    margin-bottom: 20px;
    font-size: 26rpx;
}
.post-title {
    font-size: 32rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 10px;
    margin-left: 10px;
}
.post-image {
    margin-left: 16px;
    width: 100%;
    height: 340rpx;
    margin: auto 0;
    margin-bottom: 15px;
}
.post-content {
    color: #666;
    font-size: 25rpx;
    margin: 0px 10px 10px 10px;
    letter-spacing: 5px;
    line-height: 30rpx;
}
.post-like {
    font-size: 13px;
    flex-direction: row;
    line-height: 6px;
    margin-left: 10px;
}
.post-like-image {
    height: 16px;
    width: 16px;
    margin-left: 8px;
    vertical-align: middle;
}
.post-like-font {
    font-size: 15px;
    vertical-align: middle;
    margin-right: 20px;
    margin-left: 10px;
    color: #666;
}