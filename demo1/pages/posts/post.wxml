<view>
<!--vertical="NO"-->
    <swiper indicatorDots="YES" autoplay="YES" interval="2000" circular="YES">
        <swiper-item>
            <image src="/images/1.jpg"></image>
        </swiper-item>
        <swiper-item>
            <image src="/images/2.jpg"></image>
        </swiper-item>
        <swiper-item>
            <image src="/images/3.jpg"></image>
        </swiper-item>
    </swiper>
</view>
<block wx:for="{{postKey}}" wx:for-item="item">
  <view class="post-containter">
    <view class="post-author-date">
      <image class="post-author" src="{{item.avatar}}"></image>
      <text class="post-date">{{item.date}}</text>
    </view>
    <text class="post-title">{{item.title}}</text>
    <image class="post-image" src="{{item.imageSrc}}"></image>
    <text class="post-content">{{item.content}}</text>
    <view class="post-like">
      <image class="post-like-image" src="/images/col.png"></image>
      <text class="post-like-font">{{item.reading}}</text>
      <image class="post-like-image" src="/images/com.png"></image>
      <text class="post-like-font">{{item.collection}}</text>
    </view>
</view>
</block>